<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ng.yourbudget101">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".network.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.validation.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainPage"
            android:label="@string/title_activity_main_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ManageCashFlow"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.validation.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.modifyCategory.PromptDetail"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.modifyCategory.AddCategory"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.modifyCategory.DeleteCategory"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.modifyCategory.ModifyCategory"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.report.BugReport"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.cashflow.ViewCashflow"
            android:screenOrientation="portrait"/>
    </application>

</manifest>